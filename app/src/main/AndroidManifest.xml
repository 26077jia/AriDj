<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aritime.aridj">

    <!-- NFC权限声明 -->
    <uses-permission android:name="android.permission.NFC"/>
    <!-- 拍照权限申明 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>
    <!-- 录音权限申明 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- 读写权限及建立文件的权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity">

        </activity>
        <activity android:name=".sign.SignListViewActivity"/>
        <activity android:name=".datamanage.view.DataManageActivity"/>
        <activity android:name=".dataupdate.view.DataUpdateActivity"/>
        <activity android:name=".spotcheck.SpotCheckActivity"/>
        <activity android:name=".cardreader.CardReaderActivity"/>
        <activity android:name=".accountmanage.view.AccountManageActivity"/>
        <activity android:name=".setting.SettingActivity"/>


    </application>

</manifest>