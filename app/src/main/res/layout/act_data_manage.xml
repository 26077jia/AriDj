<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/color_sign_title_view_bg"
        >

        <ImageButton

            android:id="@+id/img_back_router"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:src="@mipmap/icon_back"

            />

        <TextView
            android:id="@+id/tv_sign_router"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/img_back_router"
            android:ellipsize="end"
            android:text="数据管理"
            android:textColor="@color/color_sign_title_text"
            android:textSize="16sp"
            android:layout_marginTop="2dp"

            />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_setting"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />
        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/icon_filter"
            android:background="@null"
            android:layout_toLeftOf="@id/btn_setting"
            android:layout_marginRight="24dp"/>

    </RelativeLayout>



</LinearLayout>